{
	"compilerOptions": {
		"sourceMap": true,
		"sourceRoot": ".",
		"outDir": ".",
		"inlineSources": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es5",
		"lib": [
			"dom",
			"es5",
			"es2015.promise"
		],
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types"],
		"baseUrl": "./",
		"paths": {
			"vue-ripper": ["../dist/vue-ripper"]
		}
  	},
	"exclude": [
		"**/*.spec.ts"
	],
	"include": [
		"./**/*.ts",
		"./**/*.vue"
	]
}