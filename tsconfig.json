{
  "compilerOptions": {
    "sourceMap": true,
	"declaration": true,
	"sourceRoot": "./src/",
	"outDir": "./dist/",
	"inlineSources": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
		"dom",
		"es5",
		"es2015.promise"
    ],
    "allowSyntheticDefaultImports": true,
	"typeRoots": ["./node_modules/@types"],
	"baseUrl": "./"
  	},
	"exclude": [
		"**/*.spec.ts"
	],
	"include": [
		"./src/**/*.ts",
		"./src/**/*.vue"
	]
}